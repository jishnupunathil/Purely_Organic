<%-include('../partials/userHeader.ejs') %>
<head>
<!-- Font Icon -->
      <link rel="stylesheet" href="/fonts/material-icon/css/material-design-iconic-font.min.css">

      <!-- Main css -->
      <link rel="stylesheet" href="/cssSL/style.css">
 </head>
 <% allBanner.forEach(function(banner) { %>
    <%if(banner.bname==='login bg'){%>
    <div class="main"  style="background-image: url('<%=banner.bimages[1]%>');">

        <!-- Sing in  Form -->
        <section class="sign-in">
            <div class="container2">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="<%=banner.bimages[2]%>" alt="sing up image"></figure>
                        <%}%>
        <%})%>
                    </div>

                    <div class="signin-form">
                        <h2 class="form-title">Login with otp</h2>
                        <form action="/user/otpLogin" method="POST" class="register-form" id="otpLogin">
                            <div class="form-group">
                                <label for="phone"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="number" name="phoneNumber" id="phoneNumber" placeholder="Phone number" />
                            </div>
                            <div class="form-group">
                            <div class="form-group form-button">
                                <button type="submit" class="btn btn-success">send otp</button>
                            </div>
                            <%if(message){%>
                                <p style="color: red;"> <%=message%></p>
                            <%}%>
                        </form>
                        
                        <div class="social-login">
                            <span class="social-label">Or login with <a href="/login">EMAIL</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include('../partials/userFooter.ejs')%>
