<main class="main-wrap">
  <%-include('../partials/adminHeader.ejs')-%>
  <section class="content-main">
    <div class="content-header">
      <div>
        <h2 class="content-title card-title">Banners</h2>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-4">
            <form
              action="/admin/updateBanner/<%=singleBanner._id%>"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="mb-4">
                <label for="product_name" class="form-label">Banner Name</label>
                <input
                  type="text"
                  placeholder="Type here"
                  class="form-control"
                  id="bname"
                  name="bname"
                  value="<%=singleBanner.bname%>"
                />
              </div>
              <h4>Media</h4>

              <div>
                <label class="form-label">Images</label>
                <% singleBanner.bimages.forEach((image)=>{%>
                <img
                  src="<%=image %>"
                  alt=""
                  style="width: 100px; height: auto"
                />
                <%})%>
                <input
                  class="form-control"
                  type="file"
                  name="images"
                  accept="image/*"
                  onchange="previewImage(event)"
                  multiple
                />
                <img class="preview" style="width: 100px; height: inherit" />
              </div>
              <div class="d-grid">
                <button class="btn btn-primary">Edit Banner</button>
              </div>
            </form>
          </div>
          <!-- .col// -->
        </div>
        <!-- .row // -->
      </div>
      <!-- card body .// -->
    </div>
    <!-- card .// -->
  </section>
  <!-- content-main end// -->
  <%-include('../partials/adminFooter.ejs')%>
